#!/usr/bin/env bash

set -o 'errexit'
set -o 'nounset'
set -o 'pipefail'
check_libs() {
	dotnet clean
	dotnet restore
	local build_configuration='Release'
	readonly build_configuration
	dotnet build --no-restore \
		--configuration "${build_configuration}"
	dotnet run --project './libs/core/tests/unit/Sagitta.Core.UnitTests.csproj' \
		--no-build \
		--configuration "${build_configuration}"
	return $?
}
check_docs() {
	pnpm run 'astro:check'
	pnpm run 'astro:build'
	return $?
}
run() {
	check_libs
	check_docs
	exit $?
}
run
