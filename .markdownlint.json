{
	"$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
	"descriptive-link-text": false,
	"first-line-heading": true,
	"heading-style": false,
	"hr-style": {
		"style": "---"
	},
	"line-length": {
		"code_blocks": false,
		"line_length": 120,
		"tables": false
	},
	"no-missing-space-closed-atx": false,
	"no-trailing-spaces": {
		"br_spaces": 0,
		"strict": true
	},
	"ul-style": {
		"style": "dash"
	}
}
